{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "description": "",
  "data": {
    "url": "data/weather.csv"
  },
  "repeat": [
    "temp_max",
    "precipitation",
    "wind"
  ],
  "spec": {
    "mark": "line",
    "encoding": {
      "x": {
        "field": "date",
        "timeUnit": "month",
        "type": "temporal"
      },
      "y": {
        "field": {
          "repeat": "repeat"
        },
        "type": "quantitative",
        "aggregate": "mean"
      },
      "color": {
        "field": "location",
        "type": "nominal"
      }
    }
  }
}
