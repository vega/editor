{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ]
  },
  "include": [
    "src/**/*.ts*",
    "tests/**/*.ts*",
    "vite.config.ts",
    "playwright.config.ts"
  ]
}