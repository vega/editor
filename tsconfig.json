{
  "compilerOptions": {
    "target": "ES2024",
    "module": "Node16",
    "moduleResolution": "Node16",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "react",
      "react-dom"
    ]
  },
  "include": [
    "src/**/*.ts*",
    "test/**/*.ts*",
    "src/types/**/*.d.ts"
  ]
}